{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "moduleResolution": "node",                       
    "outDir": "dist",
    "baseUrl": ".",                                  
    "paths": {"*": ["node_modules/*"]},                                     
    "sourceMap": true,                               
    "downlevelIteration": true,                      
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": false,                            
    "skipLibCheck": true                               
  },
  "include": ["src/**/*"]
}
